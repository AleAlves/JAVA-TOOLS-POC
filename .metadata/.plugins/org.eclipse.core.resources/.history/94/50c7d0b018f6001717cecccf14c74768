package useless;

import java.awt.List;
import java.io.File;
import java.text.SimpleDateFormat;
import java.util.ArrayList;

import useless.domain.Directory;
import useless.domain.Image;
import useless.domain.Resource;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Directory classDirectory = new Directory();
		Directory layoutDirectory = new Directory();
		Directory drawablesDirectory = new Directory();

		classDirectory.setPath("C:/Users/Aleson/Documents/gapzero-android/app/src/main/java/com/santander/app/");
		layoutDirectory.setPath("C:/Users/Aleson/Documents/gapzero-android/app/src/main/java/com/santander/app/");
		drawablesDirectory.setPath("C:/Users/Aleson/Documents/gapzero-android/app/src/main/java/com/santander/app/");
		
		FileUtils res = new FileUtils();
		FileUtils classes = new FileUtils();

		ArrayList<Image> images = new ArrayList<Image>();
		ArrayList<File> project = new ArrayList<File>();
		ArrayList<Resource> java = new ArrayList<Resource>();
		ArrayList<Resource> layout = new ArrayList<Resource>();
		ArrayList<Resource> others = new ArrayList<Resource>();
		
		project.addAll(classes.walkDirs(classDirectory.getPath()));
		System.out.println("Classes: " + project.size());
		for(File file : project) {
			Image image = new Image();
			image.setId(file.getName());
			images.add(image);
		}
		long start = System.currentTimeMillis();
		
		String time = new SimpleDateFormat("mm:ss:SSS").format((System.currentTimeMillis() - start));
		System.out.println("Time: " + time);
	}

}
